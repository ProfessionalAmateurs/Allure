@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="row" style="padding-bottom: 10px;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
        </div>
        <div class="row" style="padding-bottom: 10px;">
            @Html.ActionLink("Go Back", "Login", "Home", null, new { style = "width: 100%; text-align: right;" })
        </div>
        <div class="card">
            <div class="card-header" style="background-color: blue; color: white;">
                 Login
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <span id="employee-captchaMessage" style="display:inline-block; font-size:20px; margin:20px 0; padding:20px; border:1px solid red; color: red; width: 100%; text-align: center;">
                        @ViewBag.Message
                    </span>
                }
                <div class="form-group">
                    <label for="customerUserName">Username:</label>
                    <input class="form-control" name="customerUserName" id="customerUserName"  type="text" required />
                </div>
                <div class="form-group">
                    <label for="customerPassword">Password:</label>
                    <input class="form-control" name="customerPassword" id="customerPassword" type="password" required />
                </div>
                <div class="text-center" style="padding-bottom: 10px;">
                    <div class="g-recaptcha" data-sitekey="6LevTFEUAAAAAH__6pR5_ZvqrAQkXmHEmPw-n7Au" style="display: inline-block;"></div>
                </div>
                <div class="text-center">
                    @Html.ActionLink("Forgot Password?", "PasswordReset", "Home", new { employee = true }, null)
                </div>
                <div class="col offset-3 col-md-6 mt-3">
                    <input type="submit" class="btn btn-primary btn-block" id="employeeLoginSubmit" value="Login" />
                </div>
            </div>
        </div>
    </div>
}