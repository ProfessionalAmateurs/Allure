@model IEnumerable<AllureRemodeling.Models.Testimonials>

@{
    ViewBag.Title = "Testimonials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Testimonials</h2>

<p>
    @Html.ActionLink("Write us a Testimonial", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Testimonial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @{int i = 0;}
    @foreach (var item in Model)
    {
        i += 1;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td id="@("testimonial"+i)">
                @Html.DisplayFor(modelItem => item.Testimonial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

        </tr>
    }

</table>
